{
  "name": "law-lending",
  "version": "1.0.0",
  "description": "Проект для обучения SCSS",
  "main": "index.js",
  "scripts": {
    "sass": "sass scss/main.scss css/style.css",
    "sass:watch": "sass --watch scss/main.scss css/style.css",
    "sass:prod": "sass scss/main.scss css/style.css --style compressed",
    "build": "npm run sass:prod",
    "start": "npx concurrently \"npm run sass:watch\" \"npx serve -l 3000\""
  },
  "keywords": [
    "scss",
    "sass",
    "learning"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "sass": "^1.69.5"
  }
}
